<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/choose_theme"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Please, choose the game Theme"
        android:textSize="@dimen/text_size"
        android:background="@drawable/layout_bt"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/theme_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/choose_theme"
        android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>

</RelativeLayout>