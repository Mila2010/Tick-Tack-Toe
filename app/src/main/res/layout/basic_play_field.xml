        <Button
            android:id="@+id/upper_left"
            android:layout_width="@dimen/basicwidth"
            android:layout_height="@dimen/basicwidth"
            android:layout_marginLeft="@dimen/indent"
            android:layout_marginTop="@dimen/indent_top"
            android:textColor="@color/Gray"
            android:textSize="@dimen/cross_size"
            android:background="@drawable/layout_bt"

            />
        <Button
            android:id="@+id/upper_center"
            android:layout_width="@dimen/basicwidth"
            android:layout_height="@dimen/basicwidth"
            android:layout_toRightOf="@id/upper_left"
            android:layout_marginTop="@dimen/indent_top"
            android:background="@drawable/layout_bt"
            android:textColor="@color/Gray"
            android:textSize="@dimen/cross_size"
            />
        <Button
            android:id="@+id/upper_right"
            android:layout_width="@dimen/basicwidth"
            android:layout_height="@dimen/basicwidth"
            android:layout_toRightOf="@id/upper_center"
            android:layout_marginTop="@dimen/indent_top"
            android:textSize="@dimen/cross_size"
            android:background="@drawable/layout_bt"
            android:textColor="@color/Gray"
            />
        <Button
            android:id="@+id/center_left"
            android:layout_width="@dimen/basicwidth"
            android:layout_height="@dimen/basicwidth"
            android:layout_below="@id/upper_left"
            android:layout_marginLeft="@dimen/indent"
            android:textSize="@dimen/cross_size"
            android:background="@drawable/layout_bt"
            android:textColor="@color/Gray"

            />
        <Button
            android:id="@+id/center"
            android:layout_width="@dimen/basicwidth"
            android:layout_height="@dimen/basicwidth"
            android:layout_toRightOf="@id/center_left"
            android:layout_below="@id/upper_center"
            android:textSize="@dimen/cross_size"
            android:background="@drawable/layout_bt"
            android:textColor="@color/Gray"
            />
        <Button
            android:id="@+id/center_right"
            android:layout_width="@dimen/basicwidth"
            android:layout_height="@dimen/basicwidth"
            android:layout_below="@id/upper_right"
            android:layout_toRightOf="@id/center"
            android:textSize="@dimen/cross_size"
            android:background="@drawable/layout_bt"
            android:textColor="@color/Gray"


            />
        <Button
            android:id="@+id/lower_left"
            android:layout_width="@dimen/basicwidth"
            android:layout_height="@dimen/basicwidth"
            android:layout_below="@id/center_left"
            android:layout_marginLeft="@dimen/indent"
            android:textSize="@dimen/cross_size"
            android:background="@drawable/layout_bt"
            android:textColor="@color/Gray"
            />
        <Button
            android:id="@+id/lower_center"
            android:layout_width="@dimen/basicwidth"
            android:layout_height="@dimen/basicwidth"
            android:layout_toRightOf="@id/lower_left"
            android:layout_below="@id/center"
            android:textSize="@dimen/cross_size"
            android:background="@drawable/layout_bt"
            android:textColor="@color/Gray"
            />
        <Button
            android:id="@+id/lower_right"
            android:layout_width="@dimen/basicwidth"
            android:layout_height="@dimen/basicwidth"
            android:layout_below="@id/center_left"
            android:layout_toRightOf="@id/lower_center"
            android:textSize="@dimen/cross_size"
            android:background="@drawable/layout_bt"
            android:textColor="@color/Gray"

            />



</RelativeLayout>